<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = ""
    version   = "1.0.0">

<name>Bússola</name>

<description>
A simple PhoneGap Build application.
</description>

<author href="https://esaramago.com" email="reg@esaramago.com">
Emanuel Saramago
</author>

<!-- Icon da aplicação-->
<icon src="logo.png" />
<!-- Splash screen -->
<gap:splash src="splash.png" width="320" height="480"/>



<!-- If you do not want any permissions to be added to your app, add the
    following tag to your config.xml; you will still have the INTERNET
    permission on your app, which PhoneGap requires. -->
<preference name="permissions" value="none"/>
<preference name="orientation" value="portrait"/>  

<!-- to enable individual permissions use the following examples -->
<feature name="http://api.phonegap.com/1.0/battery"/>
<feature name="http://api.phonegap.com/1.0/file"/>
<feature name="http://api.phonegap.com/1.0/geolocation"/>
<feature name="http://api.phonegap.com/1.0/network"/>
<feature name="http://api.phonegap.com/1.0/notification"/>

<feature name="Compass">
    <param name="android-package" value="org.apache.cordova.deviceorientation.CompassListener" />
</feature>

<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

<!-- Forçar versão do Phonegap -- >
<preference name="phonegap-version" value="2.9.0" />
<!-- Duração do Splash Screen em milisegundos 
     Suportado a partir do PhoneGap 2.1.0 -- >
<preference name="splash-screen-duration" value="3000" />
<!-- Mais informação em
     https://build.phonegap.com/docs/config-xml -->
</widget>
